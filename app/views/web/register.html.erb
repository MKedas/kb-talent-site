<div class="page-header">
  <div class="jumbotron">
    <h1 class="text-center" style="color:#333333;">
      Registration
    </h1>
    <% if !@errors.blank? %>
      <% for item in @errors %>
        <div class="alert alert-danger">
          <span style="color:red;"><%= item %></span>
        </div>
        <% end %>
